{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "moduleDetection": "auto",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
  }
}